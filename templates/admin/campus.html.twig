            </div>
        </div>

    {% endfor %}


    {{ form_start(campusForm) }}
    <div class="adminVille">
        <p>
            {{ form_label(campusForm.nom) }}
            {{ form_widget(campusForm.nom) }}
            {{ form_errors(campusForm.nom) }}
        </p>
        <p>
            {{ form_label(campusForm.ajouter) }}
            {{ form_widget(campusForm.ajouter) }}

        </p>


    </div>

    {{ form_end(campusForm) }}

    </div>

