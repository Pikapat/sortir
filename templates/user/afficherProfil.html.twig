{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
{% endblock %}


{% block title %}
    {{ parent() }} - Profil
{% endblock %}

{% block body %}
    <section class="baseForm">


        {% if app.user.id == user.id %}
            <h1>Profil</h1>
        {% endif %}
                <section>
                    <div>
                        <img src="{{ asset('uploads/brochures/' ~ user.picture) }}" alt="Photo du profil" height="200 px">
                        <a href=""></a>
                    </div>
                </section>

            <div>
                <p>{{ user.pseudo }}</p>
                <p>{{ user.nom }}</p>
                <p>{{ user.prenom }}</p>
                <p>{{ user.telephone }}</p>
                <p>{{ user.email }}</p>
                <p>{{ user.campus.nom }}</p>
            </div>

    </section>
{% endblock %}
