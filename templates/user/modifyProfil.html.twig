{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
{% endblock %}


{% block title %}
    {{ parent() }} - Modification Profil
{% endblock %}

{% block body %}
    <section class="baseForm">

        <h1>Modification Profil</h1>

        <div class="form-fields">

            {{ form_start(user_profil) }}

            <div class="form-field">
                {{ form_label(user_profil.pseudo) }}
                {{ form_widget(user_profil.pseudo) }}
                {{ form_errors(user_profil.pseudo) }}
                <br>
            </div>
            <div class="form-field">
                {{ form_label(user_profil.prenom) }}
                {{ form_widget(user_profil.prenom) }}
                {{ form_errors(user_profil.prenom) }}
                <br>
            </div>
            <div class="form-field">
                {{ form_label(user_profil.nom) }}
                {{ form_widget(user_profil.nom) }}
                {{ form_errors(user_profil.nom) }}
                <br>
            </div>

            <div class="form-field">
                {{ form_label(user_profil.telephone) }}
                {{ form_widget(user_profil.telephone) }}
                {{ form_errors(user_profil.telephone) }}
                <br>
            </div>
            <div class="form-field">
                {{ form_label(user_profil.email) }}
                {{ form_widget(user_profil.email) }}
                {{ form_errors(user_profil.email) }}
                <br>
            </div>
            <div class="form-field">
                {{ form_widget(user_profil.password) }}
                {{ form_errors(user_profil.password) }}
                <br>
            </div>

            <div class="form-field">
                {{ form_label(user_profil.campus) }}
                {{ form_widget(user_profil.campus) }}
                {{ form_errors(user_profil.campus) }}
                <br>
            </div>

            <div class="form-field">
                {{ form_label(user_profil.picture) }}
                {{ form_widget(user_profil.picture) }}
                {{ form_errors(user_profil.picture) }}
                <br>
            </div>

            <div class="form-buttons">
                {{ form_widget(user_profil.submit) }}
                {{ form_widget(user_profil.reset) }}
                {{ form_end(user_profil) }}
            </div>
        </div>

    </section>
{% endblock %}
