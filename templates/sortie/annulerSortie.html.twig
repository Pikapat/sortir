{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    - Annulation
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
    <link rel="stylesheet" href="{{ asset('css/formPopUp.css') }}" >
{% endblock %}

{% block body %}

    <div class="baseForm">
    <h1>Annuler une sortie</h1>
    <div>
    <p>Nom de la sortie : {{ sortie.titre }}</p>
    <p>Date de la sorite : {{ sortie.dateHeureDebut|date('d/m/Y') }}</p>
    <p>Campus : {{ sortie.siteOrganisateur.nom }}</p>
    <p>Lieu : {{ sortie.lieu.nom }}</p>

        {{ form_start(sortieForm) }}


        {{ form_label(sortieForm.motif) }}
        {{ form_widget(sortieForm.motif) }}
        {{ form_errors(sortieForm.motif) }}
    </div>
        <div class="button-form-annuler">
        {{ form_widget(sortieForm.enregistrer) }}
    </div>
        {{ form_end(sortieForm) }}

    </div>

{% endblock %}


